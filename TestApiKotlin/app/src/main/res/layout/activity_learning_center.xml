<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="1dp"
        tools:context=".Building.LearningCenter">


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="608dp"
            android:layout_height="389dp"
            android:src="@drawable/learningcenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="767dp"
            android:layout_height="405dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/filtre_noir"
            android:alpha="0.6"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="651dp"
            android:layout_height="534dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/learning_title"
            tools:layout_editor_absoluteY="-65dp"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="791dp"
            android:layout_height="659dp"
            android:layout_marginTop="968dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fond_gris" />


        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="287dp"
            android:layout_height="274dp"
            android:layout_marginTop="804dp"
            android:layout_marginEnd="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/learning_center2" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="404dp"
            android:layout_height="736dp"
            android:layout_marginTop="248dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/learning_text" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="360dp"
            android:layout_height="545dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="636dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/learning_keyword" />

        <Button
            android:id="@+id/button"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:layout_marginBottom="28dp"
            android:text="BuildingView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            />

        <TextView
            tools:ignore="MissingConstraints"
            android:id="@+id/setuplocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="@string/fp_view_location"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="391dp"
            android:layout_height="460dp"
            android:layout_marginTop="1036dp"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.413"
            app:srcCompat="@drawable/learning_text2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
